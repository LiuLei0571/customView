<?xml version="1.0" encoding="utf-8"?>
<resources>

    <attr name="titleName" format="string"/>
    <attr name="titlleColor" format="color"/>
    <attr name="titleSize" format="dimension"/>
    <attr name="titleText" format="string" />
    <attr name="titleTextSize" format="dimension" />
    <attr name="titleTextColors" format="color" />
    <attr name="image" format="reference" />
    <attr name="imageScaleType">
        <enum name="fillXY" value="0" />
        <enum name="center" value="1" />
    </attr>
    <attr name="firstColor" format="color"/>
    <attr name="secondColor" format="color"/>
    <attr name="circleWidth" format="dimension"/>
    <attr name="dotCount" format="integer"/>
    <attr name="bg" format="reference"></attr>
    <attr name="splitSize" format="integer"/>
    <attr name="speed" format="integer"/>
    <declare-styleable name="CustomTitleView">
         <attr name="titleName"/>
         <attr name="titlleColor"/>
         <attr name="titleSize"/>
     </declare-styleable>

    <declare-styleable name="CustomImageView">
        <attr name="titleText" />
        <attr name="titleTextSize" />
        <attr name="titleTextColors" />
        <attr name="image" />
        <attr name="imageScaleType" />
    </declare-styleable>
<declare-styleable name="CustomProgressBar">
    <attr name="firstColor"/>
    <attr name="secondColor"/>
    <attr name="circleWidth"/>
    <attr name="speed"/>
    <attr name="titleText" />
    <attr name="titleSize"/>
</declare-styleable>
    <declare-styleable name="CustomSound">
        <attr name="firstColor"/>
        <attr name="secondColor"/>
        <attr name="circleWidth"/>
        <attr name="dotCount"/>
        <attr name="bg"/>
        <attr name="splitSize"/>
    </declare-styleable>
</resources>